                    <th>{% trans %}Nom{% endtrans %}</th>
                    <td>{{ medicament.nom }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Type{% endtrans %}</th>
                    <td>{{ medicament.type }}</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

{{ include('admin_medicament_controlleur/_delete_form.html.twig') }}
{% endblock %}
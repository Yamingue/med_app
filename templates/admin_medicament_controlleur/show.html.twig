        {% endtrans %}
    </a>

</div>
<div class="card mb-2">
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <td>{{ medicament.id }}</td>
                </tr>

{% extends 'main.html.twig' %}

{% block title %}Medicament{% endblock %}

{% block body %}
<h4>Details</h4>
<div class="d-flex justify-content-between mb-2">
    <a class="btn btn-sm btn-primary" href="{{ path('app_admin_medicament_controlleur_index') }}">
        {% trans %}
        Retour
        {% endtrans %}
    </a>

    <a class="btn btn-sm btn-primary" href="{{ path('app_admin_medicament_controlleur_edit', {'id': medicament.id}) }}">

{% extends 'main.html.twig' %}

{% block title %}{% trans %}Statistique des recettes{% endtrans %}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-sm-6 col-lg-3 mb-4">
        <div class="card card-border-shadow-primary h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2 pb-1">
                    <div class="avatar me-2">
                        <span class="avatar-initial rounded bg-label-primary"><i class="bx bxs-truck"></i></span>
                    </div>
                    <h4 class="ms-1 mb-0">{{count_patient()}}</h4>
                </div>
                <p class="mb-1">{% trans %}Patient{% endtrans %}</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3 mb-4">
        <div class="card card-border-shadow-warning h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2 pb-1">
                    <div class="avatar me-2">
                        <span class="avatar-initial rounded bg-label-warning"><i class="bx bx-user"></i></span>
                    </div>
                    <h4 class="ms-1 mb-0">{{count_user()}}</h4>
                </div>
                <p class="mb-1">{% trans %}Utilisteurs{% endtrans %}</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3 mb-4">
        <div class="card card-border-shadow-danger h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2 pb-1">
                    <div class="avatar me-2">
                        <span class="avatar-initial rounded bg-label-danger"><i
                                class="bx bx-git-repo-forked"></i></span>
                    </div>
                    <h4 class="ms-1 mb-0">{{count_consultation()}}</h4>
                </div>
                <p class="mb-1">{% trans %}Consultations{% endtrans %}.</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3 mb-4">
        <div class="card card-border-shadow-info h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2 pb-1">
                    <div class="avatar me-2">
                        <span class="avatar-initial rounded bg-label-info">
                            {# <i class="bx bx-time-five"></i> #}
                            <i class="fa-solid fa-microscope"></i>
                        </span>
                    </div>
                    <h4 class="ms-1 mb-0">{{count_examens()}}</h4>
                </div>
                <p class="mb-1">{% trans %}Examens{% endtrans %}</p>
            </div>
        </div>
    </div>
</div>

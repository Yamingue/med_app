{{ form_start(form) }}
<div class="row">
    <div class="col-sm-12">
        {{ form_row(form.username) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.nom) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.prenom) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.genre) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.civilite) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.roles) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.password) }}
    </div>
</div>

<button class="btn btn-primary">{{ button_label|default('Ajouter'|trans) }}</button>
{{ form_end(form) }}
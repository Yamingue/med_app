{% extends 'main.html.twig' %}

{% block title %}ExamItem{% endblock %}

{% block body %}

<a class="btn btn-sm btn-primary mb-2" href="{{ path('app_exam_item_index') }}">Retour</a>

<div class="card">
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <td>{{ exam_item.id }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Nom{% endtrans %}</th>
                    <td>{{ exam_item.nom }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Prix{% endtrans %}</th>
                    <td>{{ exam_item.prix }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<div class="d-flex justify-content-between mt-2">
    <a class="btn btn-warning" href="{{ path('app_exam_item_edit', {'id': exam_item.id}) }}">
        {% trans %}Editer{% endtrans %}
    </a>

    {{ include('exam_item/_delete_form.html.twig') }}
</div>
{% endblock %}